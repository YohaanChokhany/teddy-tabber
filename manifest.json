{
  "manifest_version": 3,
  "name": "Simple Tab Manager",
  "version": "1.0",
  "description": "Manage and categorize your open tabs.",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  }
}
